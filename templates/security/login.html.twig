{% extends 'base.html.twig' %}

{% block title %}Вход - Bellamie{% endblock %}

{% block stylesheets %}
<style>
    .auth-container {
        max-width: 450px;
        margin: 60px auto;
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .auth-title {
        font-family: 'Merriweather', serif;
        font-size: 32px;
        color: var(--charcoal);
        margin-bottom: 10px;
        text-align: center;
    }

    .auth-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 30px;
        font-size: 15px;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid var(--border-light);
        padding: 12px 16px;
        font-size: 15px;
        margin-bottom: 20px;
    }

    .form-control:focus {
        border-color: var(--teal);
        box-shadow: 0 0 0 3px rgba(64, 224, 208, 0.1);
    }

    .btn-primary {
        background-color: var(--teal);
        border: none;
        border-radius: 8px;
        padding: 14px;
        width: 100%;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background-color: var(--teal-dark);
        transform: translateY(-2px);
    }

    .auth-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

    .auth-link a {
        color: var(--teal);
        font-weight: 600;
        text-decoration: none;
    }

    .auth-link a:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .divider {
        text-align: center;
        margin: 30px 0;
        position: relative;
    }

    .divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--border-light);
    }

    .divider span {
        background: white;
        padding: 0 15px;
        position: relative;
        color: #999;
        font-size: 14px;
    }

    .btn-google {
        background: white;
        border: 2px solid #ddd;
        border-radius: 8px;
        padding: 14px;
        width: 100%;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s;
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-google:hover {
        background: #f8f9fa;
        border-color: #bbb;
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        color: #333;
    }

    .btn-google img {
        width: 20px;
        height: 20px;
    }
</style>
{% endblock %}

{% block body %}
<div class="auth-container">
    <h1 class="auth-title">Вход</h1>
    <p class="auth-subtitle">Влезте във вашия акаунт</p>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <form method="post">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Имейл</label>
            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Парола</label>
            <input type="password" name="_password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary" type="submit">
            <i class="fas fa-sign-in-alt"></i> Вход
        </button>
    </form>

    <div class="divider">
        <span>ИЛИ</span>
    </div>

    <a href="{{ path('connect_google') }}" class="btn-google">
        <svg width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Вход с Google
    </a>

    <div class="auth-link">
        <a href="{{ path('app_forgot_password_request') }}">Забравихте си паролата?</a><br>

        Нямате акаунт? <a href="{{ path('app_register') }}">Регистрирайте се тук</a>
    </div>
</div>
{% endblock %}
