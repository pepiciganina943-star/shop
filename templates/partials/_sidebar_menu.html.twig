<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-dark text-white fw-bold">
        <i class="fas fa-list"></i> Категории
    </div>
    <div class="list-group list-group-flush">
        {% for category in categories %}
            <a href="{{ path('app_category_show', {id: category.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                {{ category.name }}
                {% if category.children is not empty %}
                    <span class="badge bg-secondary rounded-pill">{{ category.children|length }}</span>
                {% endif %}
            </a>

            {# Ако искаш да показваш и децата в сайдбара, можеш да ги добавиш тук #}
        {% else %}
            <div class="p-3 text-muted">Няма категории</div>
        {% endfor %}
    </div>
</div>