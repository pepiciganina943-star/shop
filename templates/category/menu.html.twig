{# ВАЖНО: Сменихме 'justify-content-center' на 'justify-content-start' #}
<ul class="navbar-nav mb-2 mb-lg-0 flex-row flex-wrap justify-content-start gap-4 m-0 p-0">
    {% for category in categories %}
        <li class="nav-item" style="list-style: none;">
            {# Използваме uppercase за стил и fw-bold за плътност #}
            <a class="nav-link text-dark fw-bold text-uppercase p-0"
               href="{{ path('app_category_show', {id: category.id}) }}">
                {{ category.name }}
            </a>
        </li>
    {% else %}
        <li class="nav-item" style="list-style: none;">
            <span class="text-muted small">Няма категории</span>
        </li>
    {% endfor %}
</ul>