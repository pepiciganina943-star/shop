            <div class="row align-items-center">
                <div class="col-md-2">
                    <a href="/" class="logo">
                        <i class="fas fa-heart"></i>
                        <span>Bellamie</span>
                    </a>
                </div>
                <div class="col-md-7 search-container mx-auto">
                    {# ВАЖНО: Добавяме form таг, който сочи към пътя app_search #}
                    <form action="{{ path('app_search') }}" method="get" class="d-flex">
                        <input
                                type="text"
                                name="q"
                                id="search-input"
                                class="form-control"
                                placeholder="Търсете ръчно изработени продукти..."
                                value="{{ app.request.query.get('q') }}"
                                required
                        >
                        <button type="submit" class="btn btn-primary ms-2">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <div class="col-md-3 text-end header-icons d-flex align-items-center justify-content-end gap-4">

                    {# 1. ЛОГИКА ЗА ПОТРЕБИТЕЛЯ #}
                    {% if app.user %}
                        {# Ако е логнат: Зелено човече + Линк за изход #}
                        <a href="{{ path('app_logout') }}" title="Изход ({{ app.user.email }})" class="text-dark position-relative">
                            <i class="fas fa-user-check fa-lg text-success"></i>
                        </a>
                    {% else %}
                        {# Ако НЕ е логнат: Обикновено човече + Линк за вход #}
                        <a href="{{ path('app_login') }}" title="Вход" class="text-dark">
                            <i class="fas fa-user fa-lg"></i>
                        </a>
                    {% endif %}

                    {# 2. БРОЯЧ ЗА ЛЮБИМИ (WISHLIST) #}
                    <a href="{{ path('app_wishlist') }}" title="Любими" class="text-dark position-relative">
                        <i class="fas fa-heart fa-lg"></i>
                        {# Показваме брояча само ако потребителят е логнат и има любими #}
                        {% if app.user and app.user.favorites|length > 0 %}
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem; border: 2px solid white;">
                {{ app.user.favorites|length }}
            </span>
                        {% endif %}
                    </a>

                    {# 3. БРОЯЧ ЗА КОЛИЧКА (CART) #}
                    {# Изчисляваме общата бройка от сесията директно тук #}
                    {% set cartCount = 0 %}
                    {% set cart = app.session.get('cart', []) %}
                    {% for quantity in cart %}
                        {% set cartCount = cartCount + quantity %}
                    {% endfor %}

                    <a href="/cart" title="Количка" class="text-dark position-relative">
                        <i class="fas fa-shopping-cart fa-lg"></i>
                        {# Показваме значката само ако има нещо в количката #}
                        {% if cartCount > 0 %}
                            <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success" style="font-size: 0.65rem; border: 2px solid white;">
                {{ cartCount }}
            </span>
                        {% else %}
                            <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary" style="font-size: 0.65rem; border: 2px solid white; opacity: 0.7;">
                0
            </span>
                        {% endif %}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="banner-message">
        Уникални, ръчно изработени творения за вас и вашия дом
    </div>

    <div class="categories-nav">
        <div class="container ">
            {# Тук викаме нашата нова функция от CategoryController #}
            {{ render(controller('App\\Controller\\CategoryController::getMenu')) }}
        </div>
    </div>
</header>

