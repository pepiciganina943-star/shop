<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('search-input');
        const productGrid = document.getElementById('product-grid');
        const cartCountElement = document.getElementById('cart-count');

        function loadProducts(searchTerm = '') {
            const url = '/api/products' + (searchTerm ? '?q=' + encodeURIComponent(searchTerm) : '');

            fetch(url)
                .then(response => response.json())
                .then(products => {
                    if (!productGrid) return;
                    productGrid.innerHTML = '';

                    if (products.length === 0) {
                        productGrid.innerHTML = '<div class="col-12 text-center py-5"><p class="text-muted">Не са намерени продукти.</p></div>';
                        return;
                    }

                    products.forEach(product => {
                        // Проверка за състоянието на любими
                        const btnClass = product.isFavorite ? 'btn-danger' : 'btn-outline-danger';
                        const iconClass = product.isFavorite ? 'fas' : 'far';

                        const col = document.createElement('div');
                        col.className = 'col-6 col-md-4 col-lg-3 mb-4';
                        col.innerHTML = `
                        <div class="product-card h-100 shadow-sm border-0 bg-white d-flex flex-column">
                            <a href="/product/${product.id}" style="text-decoration: none; color: inherit;">
                                <div class="image-swap-container">
                                    <img src="${product.image}" class="img-front" alt="${product.name}">
                                    <img src="${product.hoverImage}" class="img-back" alt="${product.name}">
                                    <div class="hover-overlay">
                                        <span class="badge-view">РАЗГЛЕДАЙ</span>
                                    </div>
                                </div>
                                <div class="p-3 pb-0 text-center">
                                    <h6 class="fw-bold text-truncate mb-1">${product.name}</h6>
                                    <div class="text-primary fw-bold">${product.price} евро</div>
                                </div>
                            </a>
                            <div class="p-3 mt-auto d-flex gap-2">
                                <button class="btn btn-dark flex-grow-1 rounded-pill btn-sm" onclick="addToCart(${product.id})">
                                    <i class="fas fa-shopping-cart"></i> Добави
                                </button>
                                <button class="btn ${btnClass} rounded-circle btn-sm"
                                        style="width: 34px; height: 34px; padding: 0; display: flex; align-items: center; justify-content: center;"
                                        onclick="toggleWishlist(this, ${product.id})">
                                    <i class="${iconClass} fa-heart"></i>
                                </button>
                            </div>
                        </div>`;
                        productGrid.appendChild(col);
                    });
                })
                .catch(error => console.error('Error loading products:', error));
        }

        if (searchInput) {
            searchInput.addEventListener('input', function() { loadProducts(this.value); });
            loadProducts();
        }
    });

    // Функцията toggleWishlist остава същата, както я пренаписахме по-горе
    function toggleWishlist(btn, productId) {
        if (btn.classList.contains('disabled')) return;
        btn.classList.add('disabled');

        fetch('/wishlist/toggle/' + productId, { method: 'POST' })
            .then(res => {
                if (res.status === 401) { window.location.href = '/login'; throw new Error(); }
                return res.json();
            })
            .then(data => {
                const icon = btn.querySelector('i');
                if (data.status === 'added') {
                    btn.classList.replace('btn-outline-danger', 'btn-danger');
                    icon.classList.replace('far', 'fas');
                } else {
                    btn.classList.replace('btn-danger', 'btn-outline-danger');
                    icon.classList.replace('fas', 'far');
                    if (window.location.pathname.includes('/wishlist')) window.location.reload();
                }
            })
            .finally(() => btn.classList.remove('disabled'));
    }
</script>
{% block javascripts %}{% endblock %}

